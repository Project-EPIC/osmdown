#!/usr/bin/env node

var osmdown = require('../lib'),
    program = require('commander')

program
    .command('parse')
    .description('Simply parse a file, print back to STOUT')
    .action(function(src, options) {
        osmdown.parse(src, options)
    })

program
    .command('render')
    .description('Render a string of text')
    .action(function(src, options) {
        console.log( osmdown.render(src) )
    })

program
    .command('build')
    .description('Given an .osmdown file, actually write HTML')
    .action(function(src, options) {
      var site_data = osmdown.parse(src, options)
      // console.log(site_data)
      console.log(osmdown.render(site_data))
    })
// program
    // .option('-l, --limit <n>', 'A limit for the number of desired results', parseInt, undefined)
    // .option('-f, --format <string>', 'The desired format of the output', String, 'txt')
    // .option('-o, --outFile <path/to/file.ext>', 'A file to write the output, defaults to stdout', String)
    // .option('-b, --bboxPath <path/to/bbox.config>', 'The bounding box configuration file, defaults to ./bbox.config')

program.parse(process.argv)
